@using System.Web.Optimization
<!DOCTYPE html>

<html ng-app="nugetServer">
<head>
    <link rel="icon"
          type="image/png"
          href="Content/branding/logo-icon-32x32.png">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Antix Nuget Server</title>

    @Styles.Render("~/bundles/styles")
</head>
<body ng-controller="AppController">
    <div class="header navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"
                        data-ng-click="collapse=!collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">
                    Antix Nuget Server
                </a>
            </div>
            <div class="navbar-collapse collapse"
                 data-ng-class="{in:collapse}">
                <ul class="nav navbar-nav">
                    <li ng-class="{active:state=='home'}"><a href="#">Home</a></li>
                    <li ng-class="{active:state=='about'}"><a href="#about">About</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="view-container container">
        <a-status></a-status>

        <div ui-view class="view-frame">

        </div>
    </div>

    @Scripts.Render("~/bundles/scripts")
</body>
</html>
